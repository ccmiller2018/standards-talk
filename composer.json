{
    "name": "ccmiller2018/standards-talk",
    "type": "package",
    "description": "Our Standards and Why We Use Them",
    "keywords": ["standards", "laravel"],
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/JumpTwentyFour/laravel-coding-standards"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "fideloper/proxy": "^4.4",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "laravel/framework": "^8.40",
        "laravel/ui": "^3.3",
        "roave/security-advisories": "dev-latest"
    },
    "require-dev": {
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.9.1",
        "jumptwentyfour/laravel-coding-standards": "^0.0.1",
        "jumptwentyfour/php-coding-standards": "^1.0.0",
        "jumptwentyfour/project-analysers": "^0.0.2",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "laravel/sail": "^1.0.1",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^9.3.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "lint": [
            "vendor/bin/parallel-lint ./ --blame --exclude vendor"
        ],
        "ecs": [
            "vendor/bin/ecs check"
        ],
        "static": [
            "vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "analyse": [
            "php artisan enlightn --ci --details"
        ],
        "before-push": [
            "vendor/bin/parallel-lint ./ --blame --exclude vendor",
            "vendor/bin/ecs check --clear-cache",
            "vendor/bin/phpstan analyse --memory-limit=2G",
            "php artisan enlightn --ci --details"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
